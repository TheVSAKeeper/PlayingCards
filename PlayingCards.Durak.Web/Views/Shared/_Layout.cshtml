<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0" />
    <title>Дурач☻к</title>
    <link rel="stylesheet"
          href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />
    <link rel="stylesheet"
          href="~/css/game.css"
          asp-append-version="true" />
    <link rel="stylesheet"
          href="~/PlayingCards.Durak.Web.styles.css"
          asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index">Дурач☻к</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main"
              class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PlayingCards.Durak.Web
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/signalr-client.js"
            asp-append-version="true"></script>
    <script src="~/js/site.js"
            asp-append-version="true"></script>

    <script src="~/js/game-config.js"
            asp-append-version="true"></script>
    <script src="~/js/card-utils.js"
            asp-append-version="true"></script>
    <script src="~/js/ui-utils.js"
            asp-append-version="true"></script>
    <script src="~/js/auth-manager.js"
            asp-append-version="true"></script>
    <script src="~/js/timer-manager.js"
            asp-append-version="true"></script>
    <script src="~/js/game-state-manager.js"
            asp-append-version="true"></script>
    <script src="~/js/event-handlers.js"
            asp-append-version="true"></script>
    <script src="~/js/communication-manager.js"
            asp-append-version="true"></script>
    <script src="~/js/game-renderer.js"
            asp-append-version="true"></script>
    <script src="~/js/game-actions.js"
            asp-append-version="true"></script>
    <script src="~/js/game-init.js"
            asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>
